{% extends 'KellsBackBundle:Default:base2.php.twig' %}
{% block body %} 
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Usuarios Alarfin</h1>
                </div>
            </div>           
            <!--div class="alert alert-success" role="alert">Usuario de Alarfin agregado con &eacute;xito</div-->
			<div class="row">
            	<div class="col-xs-12">
                	<a href="{{path('agregar_alarfin')}}" class="btn btn-primary"><i class="fa fa-user fa-fw"></i> Agregar usuario de Alarfin</a>
                </div>
            </div>
		  	<div class="row toppad10">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
								<table class="table table-striped table-bordered table-hover myTooltip" id="tabla">
                                    <thead>
                                      <tr>
                                        <th width="27%">Apellido</th> 
                                        <th width="27%">Nombres</th>
                                        <th width="27%">Email</th> 
                                        <th width="16%">Tipo</th>                       
                                        <th width="5%" class="no-sort">Acciones</th>                    
                                      </th>
                                      </thead>
                                        <tbody>
                                        {% for alarfin in alarfines%}
                                            <tr>
                                                <td>{{alarfin.lastName}}</td>
                                                <td>{{alarfin.firstName}}</td>
                                                <td>{{alarfin.mail}}</td> 
                                                <td>Administrador</td>
                                                <td nowrap>
                                                	<button class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Editar" onClick="location.href='{{ path('editar-alarfin', {'id': alarfin.id})}}'"><i class="fa fa-pencil fa-fw"></i></button>
                                                    <button  class="btn btn-primary btn-sm alarfinRemove" data-toggle="tooltip" data-placement="top" title="Eliminar" href="{{ path('deleteAlarfin', {'id': alarfin.id})}}"><i class="fa fa-trash fa-fw"></i></button>
                                                </td>
                                            </tr>	
										{% endfor %}
                                        </tbody>
                                     </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
	$(document).ready(function() {
		
		$(".alarfinRemove").on("click", function(e) {
   					var link = this;
    				e.preventDefault();
    				$("<div title='Confirmar'>Está seguro que desea eliminar el usuario?</div>").dialog({
        				buttons: {
            					"Sí": function() {
                						window.location = link.href;
            						},
            					"No": function() {
                						$(this).dialog("close");
            					}
        				}
    				});
				});
	});
</script>
{% endblock %}