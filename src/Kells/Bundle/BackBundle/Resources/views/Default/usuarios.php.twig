{% extends 'KellsBackBundle:Default:base2.php.twig' %}
{% block body %}
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Usuarios</h1>
                </div>
            </div>           
            <!--div class="alert alert-success" role="alert">Usuario agregado con &eacute;xito</div-->
			<div class="row">
            	<div class="col-xs-12">
                	<a href="usuarios-agregar.php" class="btn btn-primary"><i class="fa fa-user fa-fw"></i> Agregar usuario</a>
                </div>
            </div>
		  	<div class="row toppad10">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="table-responsive">
								<table class="table table-striped table-bordered table-hover myTooltip" id="tabla">
                                    <thead>
                                      <tr>
                                        <th width="20%">Apellido</th> 
                                        <th width="30%">Nombres</th>
                                        <th width="25%">Email</th>      
                                        <th width="20%">Tel&eacute;fono</th>                  
                                        <th width="5%" class="no-sort">Acciones</th>                    
                                      </th>
                                      </thead>
                                        <tbody>
                                        	{% for user in users%}
                                            <tr>
                                                <td>{{ user.lastname }}</td>
                                                <td>{{ user.firstname }}</td>
                                                <td>{{ user.mail }}</td> 
                                                <td>{{ user.telephone }}</td> 
                                                <td nowrap>
                                                	<button class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Editar" onClick="location.href='usuarios-editar.php'"><i class="fa fa-pencil fa-fw"></i></button>
                                                    <a class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Publicaciones" href="{{ path('publicaciones_usuario', {'userId': user.id})}}"><i class="fa fa-car fa-fw"></i></a>
                                                    <a class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Eliminar" onClick=""><i class="fa fa-trash fa-fw"></i></a>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                             
										</tbody>
                                     </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
	$(document).ready(function() {
		$('#tabla').dataTable({
			"aoColumnDefs" : [{
			"bSortable" : false,
			"aTargets" : [ "no-sort" ]
			}]
		});
		$('.myTooltip').tooltip({
			selector: "[data-toggle=tooltip]",
			container: "body"
		});
	});
</script>
{% endblock %}